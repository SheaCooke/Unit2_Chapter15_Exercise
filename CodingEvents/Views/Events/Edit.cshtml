<h1>Edit Events</h1>

<form method="post" action="/events/edit">
    <input type="hidden" value="@ViewBag.eventToBeEdited.Id" name="eventId" />
    <label for="name">Enter the name of an event.</label>
    <input name="name" type="text" value="@ViewBag.eventToBeEdited.Name" />

    <label for="description">Enter a description of the event.</label>
    <input name="description" type="text" value="@ViewBag.eventToBeEdited.Description" />



    <input type="submit" value="Save Event" />


</form>